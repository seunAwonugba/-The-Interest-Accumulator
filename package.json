{
    "name": "interest-accumulator",
    "version": "1.0.0",
    "description": "a Node/TS service that calculates daily interest based on a 27.5% per annum rate.",
    "main": "app.js",
    "scripts": {
        "build": "rimraf dist && npx tsc",
        "predev": "npm run build",
        "prestart:test": "npm run build",
        "start": "cross-env NODE_ENV=production node dist/app.js",
        "start:test": "cross-env NODE_ENV=test concurrently \"npx tsc -w\" \"nodemon dist/app.js\"",
        "dev": "cross-env NODE_ENV=development concurrently \"npx tsc -w\" \"nodemon dist/app.js\""
    },
    "keywords": [
        "Node/TS",
        "Sequelize"
    ],
    "author": "seun awonugba",
    "license": "ISC",
    "dependencies": {
        "connect-mongo": "^5.1.0",
        "connect-redis": "^9.0.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "helmet": "^7.1.0",
        "http-status-codes": "^2.3.0",
        "joi": "^17.13.3",
        "nanoid": "^3.3.4",
        "nodemon": "^3.1.7",
        "pg": "^8.13.0",
        "pg-hstore": "^2.3.4",
        "redis": "^5.6.0",
        "rimraf": "^6.0.1",
        "sequelize": "^6.37.3"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/nodemailer": "^6.4.16",
        "concurrently": "^9.0.1",
        "sequelize-cli": "^6.6.5",
        "typescript": "^5.6.2"
    }
}
